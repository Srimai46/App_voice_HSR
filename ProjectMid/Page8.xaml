<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMid.Page8"
             Title="Remembrance">
    <Grid>
        <!-- ภาพพื้นหลัง -->
        <Image 
            Source="bg2.jpg"
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <!-- เนื้อหาที่สามารถเลื่อนดูได้ -->
        <ScrollView>
            <VerticalStackLayout>

                <!-- Trailblazer - Remembrance -->
                <Frame 
                    BorderColor="Gray"
                    BackgroundColor="#1c2140"
                    Padding="20"
                    HasShadow="True"
                    CornerRadius="20"
                    HeightRequest="680"
                    WidthRequest="350"
                    Margin="30">
                    <VerticalStackLayout Spacing="5">
                        <Label 
                            Text="Trailblazer "
                            FontSize="30"
                            TextColor="Red"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            FontAttributes="Bold" />

                        <Label 
    Text="The Destruction"
    FontSize="30"
    TextColor="Red"
    HorizontalOptions="Center"
    VerticalOptions="Center"
    FontAttributes="Bold" />

                        <Frame 
                            BorderColor="Gray"
                            BackgroundColor="White"
                            Padding="10"
                            HasShadow="True"
                            CornerRadius="20"
                            HeightRequest="200"
                            WidthRequest="200"
                            Margin="10"
                            Opacity="1">
                            <Image 
                                Source="rmc.gif"
                                HeightRequest="500"
                                WidthRequest="500" 
                                Margin="20,100,0,0"/>
                        </Frame>

                        <Label 
                            Text="Junya Enoki"
                            FontSize="30"
                            TextColor="Red"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            FontAttributes="Bold" />

                        <Frame 
                            BorderColor="Gray"
                            BackgroundColor="LightGray"
                            Padding="10"
                            HasShadow="True"
                            CornerRadius="20"
                            HeightRequest="200"
                            WidthRequest="200"
                            Margin="10"
                            Opacity="1">
                            <Image 
                                Source="mcm.jpg"
                                HeightRequest="300"
                                WidthRequest="250"
                                Margin="0,75,0,0" />
                        </Frame>

                        <HorizontalStackLayout>
                            <Button 
                                Text="Character Info"
                                BackgroundColor="Red"
                                TextColor="White"
                                HorizontalOptions="Start"
                                VerticalOptions="End"
                                Clicked="rmc"
                                Margin="5" />
                            <Button 
                                Text="Voice Actor Info"
                                BackgroundColor="Green"
                                TextColor="White"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                Clicked="rmcv"
                                Margin="50,0,0,5" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Aglaea -->
                <Frame 
    BorderColor="Gray"
    BackgroundColor="#1c2140"
    Padding="20"
    HasShadow="True"
    CornerRadius="20"
    HeightRequest="680"
    WidthRequest="350"
    Margin="30">
                    <VerticalStackLayout Spacing="5">
                        <Label 
            Text="Aglaea"
            FontSize="30"
            TextColor="Red"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontAttributes="Bold" />

                        <Frame 
            BorderColor="Gray"
            BackgroundColor="White"
            Padding="10"
            HasShadow="True"
            CornerRadius="20"
            HeightRequest="200"
            WidthRequest="200"
            Margin="10"
            Opacity="1">
                            <Image 
                Source="aglaea.jpg"
                HeightRequest="600"
                WidthRequest="600" 
                                Margin="0,50,30,0"/>
                        </Frame>

                        <Label 
            Text="Endou Aya"
            FontSize="30"
            TextColor="Red"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontAttributes="Bold" />

                        <Frame 
            BorderColor="Gray"
            BackgroundColor="LightGray"
            Padding="10"
            HasShadow="True"
            CornerRadius="20"
            HeightRequest="200"
            WidthRequest="200"
            Margin="10"
            Opacity="1">
                            <Image 
                Source="aya.png"
                HeightRequest="300"
                WidthRequest="250"
                Margin="10,90,0,0" />
                        </Frame>

                        <HorizontalStackLayout>
                            <Button 
                Text="Character Info"
                BackgroundColor="Red"
                TextColor="White"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Clicked="ar"
                Margin="5" />
                            <Button 
                Text="Voice Actor Info"
                BackgroundColor="Green"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="arv"
                Margin="50,0,0,5" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- ปุ่มที่อยู่ข้างล่างขวา -->
            </VerticalStackLayout>
        </ScrollView>



    </Grid>
</ContentPage>